	<!-- TextStyle Screen -->
	<mob:ScreenView id="TextStyle" exitScreen="backToDefaultStyle()" softKeyBarDescriptor="{backSoftKey}" clipContent="true" verticalScrollPolicy="auto">
		<mob:navBarDescriptor>
			<scr:NavigationBarDescriptor title="Text Style" styleName="styleBlue"/>
		</mob:navBarDescriptor>
		
		<mx:VBox x="5" width="{width-10}" height="100%">
			<mx:Label x="5" text="&lt;mx:VBox&gt;" fontWeight="bold"/>
			<mx:HBox width="100%">
				<mx:VBox id="theBox" width="{width/2}" backgroundColor="gray" horizontalAlign="center">
					<mx:Label text="inside the VBox" styleName="inBox"/>
					<mx:Button label="inside" />
					<mx:Label text="style abc" styleName="abc"/>
				</mx:VBox>
				<mx:VBox width="{width/2}" horizontalAlign="center">
					<mx:Label text="outside the VBox" styleName="inBox"/>
					<mx:Button label="outside"/>
					<mx:Label text="style abc" styleName="abc"/>			
				</mx:VBox>				
			</mx:HBox>

			<local:CommentText x="40" width="{width-65}" text="'vbox blue' button sets text of all elements of the VBox to blue color. {'\n'}'vbox yellow' button sets text of all elements of the VBox to yellow color.{'\n'}'clear vbox color' button remove the color effect on &lt;mx:VBox&gt;" />
			<mx:VBox width="100%">
				<mx:HBox width="100%">
					<mx:Button height="{buttonSize}" label="vbox blue" touchTap="theBox.setStyle('color', 'blue')"/>
					<mx:Button height="{buttonSize}" label="vbox yellow" touchTap="theBox.setStyle('color', 'yellow')"/>
					<mx:Button height="{buttonSize}" label="clear color" touchTap="theBox.clearStyle('color')"/>
				</mx:HBox>
				
			</mx:VBox>

			<local:CommentText width="{width-65}" text="'button red' button sets all button texts to red color. {'\n'}'clear button red' button sets all buttons texts to default color"/>
			<mx:HBox width="100%">
				<mx:Button height="{buttonSize}" label="button red" touchTap="changeStyle('Button', 'color', 'red')"/>
				<mx:Button height="{buttonSize}" label="clear color" touchTap="clearProp('Button', 'color')"/>
			</mx:HBox>
			
			<local:CommentText width="{width-65}" text="Change both 'style abc' texts to green color." />
				<mx:HBox width="100%">					
					<mx:Button height="{buttonSize}" label="style green" touchTap="changeStyle('.abc', 'color', 'green')"/>
					<mx:Button height="{buttonSize}" label="clear color" touchTap="clearProp('.abc', 'color')"/>
				</mx:HBox>
					
			<local:CommentText width="{width-65}" text="'to italic' button puts its text in italic.{'\n'}'clear italic' button removes the italic effect from 'to italic' button." />
			<mx:HBox width="100%">
				<mx:Button height="{buttonSize}" id="btoit" label="to italic" touchTap="btoit.setStyle('fontStyle', 'italic')"/>
				<mx:Button height="{buttonSize}" label="clear italic" touchTap="btoit.clearStyle('fontStyle')"/>
			</mx:HBox>
			
			<local:CommentText width="{width-65}" text="Set text of all elements in the left vertical box to bold style." />
			<mx:HBox width="100%">
				<mx:Button height="{buttonSize}" label="vbox bold" touchTap="theBox.setStyle('fontWeight', 'bold')"/>
				<mx:Button height="{buttonSize}" label="clear bold" touchTap="theBox.clearStyle('fontWeight')"/>
			</mx:HBox>
						
			<local:CommentText width="{width-65}" text="'add style' button sets a new style for 'add style' button (set the text in white). {'\n'}'clear style' button deletes the new style affected to 'add style' button. This button will come back to its default style." />
			<mx:HBox width="100%">
				<mx:Button height="{buttonSize}" label="add style" styleName="def" touchTap="changeStyle('.def', 'color', 'white')"/>
				<mx:Button height="{buttonSize}" label="clear style" touchTap="StyleManager.clearStyleDeclaration('.def', true)"/>
			</mx:HBox>
			<mx:Canvas width="100%" height="5"/>
		</mx:VBox> 
	</mob:ScreenView>
	
