			<scr:NavigationBarDescriptor title="URL Navigation"/>
		</mob:navBarDescriptor>
		<mx:VBox width="100%" height="100%">
			<mx:Canvas width="100%">
				<mx:Label  x="5" text="flash.net.navigateToURL " fontWeight="bold"/>
				<mx:VBox width="100%" x="40" y="20">
					<local:CommentText width="{width-65}" text="Hit the 'Open in Browser' button to open the URL entered in the text field in a web browser (leaves the application)." />
					<mx:HBox width="100%">		
						<mx:Label id="lblHTTP" text="http://"/>
						<mob:TextInput id="txtBrowse" width="{width-65-lblHTTP.width}" height="30" text="www.openplug.com"/>
					</mx:HBox>	
					<mx:Button width="{width-105}" height="{buttonSize}" label="Open in Browser" touchTap="navigateToURL(new URLRequest(lblHTTP.text+txtBrowse.text))"/>

					<mx:VBox includeInPlatform="iPhone OS 3.0,Android 1.6" width="100%" horizontalGap="0" verticalGap="0">
						<local:CommentText width="{width-65}" text="Open a video on Youtube." />
						<mx:HBox width="100%">	
							<mx:Label id="lblYouTube" text="http://www.youtube.com/"/>
							<mob:TextInput id="txtYouTube" width="{width-65-lblYouTube.width}" height="30" text="watch?v=cPt8otPBOms"/>
						</mx:HBox>	
						<mx:Button width="{width-105}" height="{buttonSize}" label="Open in YouTube" touchTap="navigateToURL(new URLRequest(lblYouTube.text+txtYouTube.text))"/>
					</mx:VBox>
	
					<local:CommentText width="{width-65}" text="Hit the 'Mail to' button to bring up the mail tool with the to list set with the mail address entered in the text field (leaves the application)." />
					<mx:HBox width="100%">		
						<mx:Label id="lblMailTo" text="mailto:"/>
						<mob:TextInput id="txtMail" width="{width-65-lblMailTo.width}" height="30" text="someone@somewhere.com"/>
					</mx:HBox>	
					<mx:Button width="{width-105}" height="{buttonSize}" label="Mail to" touchTap="navigateToURL(new URLRequest('mailto:'+txtMail.text))"/>
					
					<mx:VBox includeInPlatform="iPhone OS 3.0,Android 1.6" width="100%" horizontalGap="0" verticalGap="0">
						<local:CommentText width="{width-65}" text="Open the Twitteasy application on the store." />
						<mx:Label width="{width-65}" text="Twitteasy App"/>
						<mx:Button width="{width-105}" height="{buttonSize}" label="Open in App Store" touchTap="openApp()"/>
					</mx:VBox>

					<mx:VBox width="100%" horizontalGap="0" excludeFromPlatform="ipad">						
						<local:CommentText width="{width-65}" text="Hit the 'Call' button to call the phone number entered in the text field (leaves the application)." />
						<mx:HBox width="100%">		
							<mx:Label id="lblCall" text="tel:"/>
							<mob:TextInput id="txtCall" width="{width-65-lblCall.width}" height="30" text="11111111"/>
						</mx:HBox>					
						<mx:Button width="{width-105}" height="{buttonSize}" label="Call" touchTap="navigateToURL(new URLRequest('tel:'+txtCall.text));"/>
					</mx:VBox>
				</mx:VBox>
			</mx:Canvas>
			<mx:Canvas width="100%" height="5"/>
		</mx:VBox>
	</mob:ScreenView>

	<!-- Geolocation Screen -->
	<mob:ScreenView id="GPSLocation" viewCreated="loadMap()" softKeyBarDescriptor="{backSoftKey}" clipContent="true" verticalScrollPolicy="auto">
		<mob:navBarDescriptor>
			<scr:NavigationBarDescriptor title="GPS location" styleName="styleBlue"/>
		</mob:navBarDescriptor>
		<mx:VBox width="100%" height="100%">
			<mx:VBox width="100%">
				<mx:Text text="GPS disabled" width="100%" textAlign="center" id="GPSstate"/>
				<mx:Text text="----" width="100%" textAlign="center" id="position"/>
			</mx:VBox>
			
			<mx:Canvas width="100%">
				<mx:VBox x="40" width="100%">
