						<mob:ActivityIndicator id="actSmall" autoStart="true" width="20" height="20"/>
						<mob:ActivityIndicator id="actMed" autoStart="true" width="25" height="25" color-scheme="shadowed"/>
						<mob:ActivityIndicator id="actBig" autoStart="false" width="40" height="40" color-scheme="light"/>
						<mob:ActivityIndicator id="actOvalH" autoStart="false" width="40" height="20" color-scheme="light"/>
