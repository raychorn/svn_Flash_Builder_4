	<!-- Web View Screen -->
	<mob:ScreenView id="Web" viewCreated="initWeb()" softKeyBarDescriptor="{backSoftKey}" clipContent="true" verticalScrollPolicy="auto">
		<mob:navBarDescriptor>
			<scr:NavigationBarDescriptor title="Web View"/>
		</mob:navBarDescriptor>
		<mx:VBox id="vboxWeb" width="100%" height="100%" includeInPlatform="iPhone OS 3.0,Android 1.6" horizontalGap="0" verticalGap="0">
			<mx:Canvas id="cvsWebComment" width="100%">
				<mx:Label x="5" y="0" text="&lt;mob:HTML&gt;" fontWeight="bold"/>
				<local:CommentText width="{width-65}" x="40" y="20" text="Type the URL you want to visit by clicking on the text field on the left. {'\n'} - 'Go' button will load the HTML page {'\n'} - 'R' button will refresh the HTML page. {'\n'} - 'X' button will stop refreshing the HTML page. {'\n'} - '&lt;' and '&gt;' buttons navigate in HTML history." />
			</mx:Canvas>

			<mx:Canvas width="100%">
				<mx:HBox width="100%" height="{buttonSize}" horizontalGap="0" verticalGap="0">
					<mob:TextInput id="txtUrl" width="40%" height="{buttonSize}" text="http://www.google.com"/>
					<mx:Button height="{buttonSize}" width="12%" label="Go!" touchTap="html.location = txtUrl.text" styleName="htmlButton"/>
					<mx:Button height="{buttonSize}" width="10%" label="R" touchTap="html.reload()" styleName="htmlButton"/>
					<mx:Button height="{buttonSize}" width="10%" label="X" touchTap="html.cancelLoad(); act.stop()" styleName="htmlButton"/>
					<mx:Button height="{buttonSize}" width="9%" label="&lt;" touchTap="html.historyBack()" styleName="htmlButton"/>
					<mx:Button height="{buttonSize}" width="9%" label="&gt;" touchTap="html.historyForward()" styleName="htmlButton"/>
					<mob:ActivityIndicator id="act" height="{buttonSize}" width="{buttonSize}"/>
				</mx:HBox>
			</mx:Canvas>
			
			<mx:Canvas width="100%" height="100%">
				<mob:HTML width="100%" height="100%" id="html" locationChange="act.start()" loading="act.start()" complete="act.stop()"></mob:HTML>
			</mx:Canvas>
			<mx:Canvas width="100%" height="5"/>
		</mx:VBox>
	</mob:ScreenView>
	
