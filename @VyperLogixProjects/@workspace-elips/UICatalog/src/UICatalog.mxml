					<mx:Button id="geolocBtn"  width="{width-65}" height="{buttonSize}" label="Start Geolocation" touchTap="startGPS()"/>
					<mx:Button width="{width-65}" height="{buttonSize}" label="Load Google Static Map" touchTap="loadMap()"/>
					<mx:Button includeInPlatform="iPhone OS 3.0,Android 1.6" width="{width-65}" height="{buttonSize}" label="Open in Google Maps" touchTap="navigateToURL(new URLRequest('http://maps.google.com/maps?ll='+latMap+','+lonMap))"/>
