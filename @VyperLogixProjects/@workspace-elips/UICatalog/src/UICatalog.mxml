	<!-- Activity control Screen -->
	<mob:ScreenView id="Activity" softKeyBarDescriptor="{backSoftKey}" clipContent="true" verticalScrollPolicy="auto">
		<mob:navBarDescriptor>
			<scr:NavigationBarDescriptor title="ActivityIndicator"/>
		</mob:navBarDescriptor>
		<mx:VBox width="100%" height="100%">
			<mx:Canvas width="100%">
				<mx:Label x="5" y="0" text="&lt;mob:ActivityIndicator&gt;" fontWeight="bold"/>
				<mx:VBox width="100%" x="40" y="20">
					<local:CommentText width="{width-65}" text="Hit the 'Start' button to animate the 5 activity indicators. Hit the 'Stop' button to stop animating the activity indicators." />
