<mob:ScreenStackApplication xmlns:mx="http://www.adobe.com/2006/mxml" layout="absolute" 
							navBarStyleName="styleBlue" isCreatingAllChildren="false"
							xmlns:mob="openplug.elips.controls.*" 
							xmlns:scr="openplug.elips.controls.screenClasses.*" 
							creationComplete="init()" xmlns:local="*" 
							>

	<!-- UI Catalog Generic Cascading Style Sheet -->
	<mx:Style source="GenericStyle.css"/>

	<!-- UI Catalog Platform Variant Cascading Style Sheet -->
	<mx:Style source="VariantStyle.css"/>

	<!-- UI Catalog AS part -->
	<mx:Script source="UICat.as"/>
	
	<!-- Localized Strings-->
	<mx:Metadata>
		[ResourceBundle("Internationalization")]
	</mx:Metadata>
	
	<!-- Custom Animation -->
	<mx:Fade id="fadeIn" duration="1000" alphaFrom="0.0" alphaTo="1.0"/>
    <mx:Sequence id="animateScaleXUpDown" >
        <mx:AnimateProperty property="x" fromValue="40" toValue="140" duration="200" />
        <mx:AnimateProperty property="x" fromValue="140" toValue="40" duration="600" />
    </mx:Sequence>

    <!-- Main Menu Item Collection-->
    <mx:ArrayCollection id="widgetsCollection">
        <mx:Object id="firstObj" label="Text Fields and Keys" data="Text"/>
		<mx:Object label="Text Style" data="TextStyle"/>
        <mx:Object label="Image" data="Image"/>
        <mx:Object label="Containers" data="Container"/>
        <mx:Object label="Buttons and Alert" data="Button"/>
        <mx:Object label="Lists" data="List"/>
        <mx:Object label="Photo and Video" data="Video"/>
        <mx:Object label="ActivityIndicator" data="Activity"/>
        <mx:Object label="URL navigation" data="URL"/>
		<mx:Object label="Geolocation" data="GPSLocation"/>
		<mx:Object label="Google Search" data="GoogleSearch"/>
		<mx:Object label="Internationalization" data="LangMgt"/>
	 </mx:ArrayCollection>

    <!-- SlideShow Item Collection-->
    <mx:ArrayCollection id="slideCollection">
        <mx:Object data="911.gif"/>
        <mx:Object data="458.gif"/>
        <mx:Object data="rapide.gif"/>
    </mx:ArrayCollection>

    <!-- Android Menu Item Collection-->
	<mx:ArrayCollection id="menu1">
		<scr:MenuItem actionClick="Alert.show('Copyright 2002-2010 Open-Plug', 'About UICatalog');" label="About" icon="@Embed('info.png')"/>
	</mx:ArrayCollection>

	<!-- SoftKey Bottom Bar -->
	<scr:SoftKeyBarDescriptor id="backSoftKey" leftAction="Back" leftActionClick="goBack()"/>
	
    <!-- iPhone Top Navigation Bar -->
	<scr:NavigationBarDescriptor title="UICatalog" id="baseNavBar" styleName="styleBlue"/>

	<!-- Main Screen -->
	<mob:ScreenView id="Base" softKeyBarStatus="none" navBarDescriptor="{baseNavBar}" menuProvider="{menu1}" clipContent="true" verticalScrollPolicy="auto">
		<mob:TabNavigator id="mainTab" width="100%" height="100%">
			<mx:VBox width="100%" height="100%" horizontalGap="0" verticalGap="0" label="Main" icon="@Embed('main.png')">
				<mx:HBox excludeFromPlatform="iPhone OS 3.0,Android 1.6" horizontalAlign="center" verticalAlign="middle" horizontalGap="0" id="Header" width="100%" height="{height/10}" backgroundImage="header.gif">
        			<mx:Label width="10%" text=" " fontSize="17" color="white"/>
        			<mx:Label textAlign="center" width="80%" id="title" text="UI Catalog" fontSize="17" color="white"/>
        			<mx:Label width="10%" text="x" fontSize="20" color="white" touchTap="exit()"/>
	    		</mx:HBox>
				<mob:List id="widgetsList" showSelection="true" dataProvider="{widgetsCollection}" 
						  rowHeight="50" itemRenderer="WidgetsListRenderer" width="100%" height="100%" 
						  itemTouchTap="onWidgetSelect(event)" styleName="lstStyle"/>
			</mx:VBox>
			<mx:VBox id="helpBox" width="100%" height="100%" horizontalGap="0" verticalGap="0" horizontalAlign="center" label="Info" icon="@Embed('info.png')" backgroundColor="white">
				<mx:HBox id="helpTitle" excludeFromPlatform="iPhone OS 3.0,Android 1.6" horizontalAlign="center" verticalAlign="middle" horizontalGap="0" width="100%" height="{height/10}" backgroundImage="header.gif">
					<mx:Label width="10%" text=" " fontSize="17" color="white"/>
        			<mx:Label text="Info" width="80%" textAlign="center" fontSize="17" color="white"/>
        			<mx:Label width="10%" text="x" fontSize="20" color="white" touchTap="exit()"/>
	    		</mx:HBox>
				<mx:Canvas height="100%" width="100%" clipContent="true" verticalScrollPolicy="auto">
					<mx:VBox width="100%" height="100%" horizontalGap="0" verticalGap="0" horizontalAlign="center">
						<mx:HBox  width="95%" horizontalAlign="center" verticalAlign="middle" horizontalGap="5" verticalGap="5">
							<mx:Text fontWeight="bold" color="black" text="{'UI Catalog for '}"/> 
							<mx:Image source="platform.png"/>
						</mx:HBox>	    		
	    				<mx:Text width="95%" color="black" textAlign="center" text="{'\nUI Catalog exhibits the main UI Components available in ELIPS with associated properties and style as well as the way to use them.\nIt also illustrates how to use the ScreenStack class for designing an application with multiple screens and handling the navigation.\n\nThe UI Catalog application can be used as a reference to build your own application User Interface.\n\nCopyright 2002-2010 OpenPlug\n\n'}"/>
	    				<mx:Image source="Logo_ELIPS_Studio.png"/>
	    			</mx:VBox>
	    	    </mx:Canvas>
	    	</mx:VBox>
		</mob:TabNavigator>
	</mob:ScreenView>

	<!-- Text controls Screen -->
	<mob:ScreenView id="Text" softKeyBarDescriptor="{backSoftKey}" clipContent="true" verticalScrollPolicy="auto">
		<mob:navBarDescriptor>
			<scr:NavigationBarDescriptor title="Text Fields"/>
		</mob:navBarDescriptor>
		<mx:VBox width="100%" height="100%">
				<mx:Canvas width="100%">
					<mx:Label x="5" y="0" text="&lt;mx:Label&gt;" fontWeight="bold"/>
					<mx:Label id="txtLabel" x="40" y="20" text="single line non-editable text" width="{width-65}"/>
				</mx:Canvas>
				<mx:Canvas width="100%">
					<mx:Label x="5" y="0" text="&lt;mx:Text&gt;" fontWeight="bold"/>
					<mx:Canvas verticalScrollPolicy="auto" clipContent="true" x="40" y="20" width="{width-65}">
						<mx:Text id="txtText" width="100%" text="multi-line text that wraps when the text is too long"/>
					</mx:Canvas>
				</mx:Canvas>
			
				<mx:Canvas width="100%">
					<mx:Label x="5" y="0" text="&lt;mob:TextInput&gt;" fontWeight="bold"/>
					<mx:VBox width="100%" x="40" y="20">
						<local:CommentText width="{width-65}" text="When tapping the textFields below, a keyboard will appear allowing you to modify the text. The modification of the 1st text field will affect the mx:Label above. The second one works as a password entry."/>
						<mob:TextInput id="txtInput" width="{width-65}" height="30" text="" textChanged="txtLabel.text=txtInput.text"/>
						<mob:TextInput id="txtInputPW" width="{width-65}" height="30" text="Password" displayAsPassword="true" />
					</mx:VBox>
				</mx:Canvas>

				<mx:Canvas width="100%">
					<mx:Label x="5" y="0" text="&lt;mob:TextArea&gt;" fontWeight="bold"/>
					<mx:VBox width="100%" x="40" y="20">
						<local:CommentText width="{width-65}" text="When tapping the textField below, a keyboard will appear allowing you to modify the text. The text changes will affect the mx:Text above. Tap the 'Change Style' button to see the text colored in red highlighted in yellow." />
						<mob:TextArea id="txtArea" width="{width-65}" height="100" text=" ALICE was beginning to get very tired of sitting by her sister on the bank and of having nothing to do: once or twice she had peeped into the book her sister was reading, but it had no pictures or conversations in it, 'and what is the use of a book,' thought Alice, 'without pictures or conversations?'" textChanged="txtText.text=txtArea.text" autoCapitalization="None" autoCorrection="false"/>
						<mx:Button width="150" height="{buttonSize}" label="Change style" touchTap="txtArea.styleName='txtStyle'"/>
						<mx:Canvas id="txtAreaNativeOptions" visible="false" width="150" height="25">
							<mx:Button x="0" width="50" height="{buttonSize}" label="OK" touchTap="txtArea.validateText()"/>
							<mx:Button x="50" width="50" height="{buttonSize}" label="Cap" touchTap="txtArea.autoCapitalization='Sentences'"/>
							<mx:Button x="100" width="50" height="{buttonSize}" label="Cor" touchTap="txtArea.autoCorrection=true"/>
						</mx:Canvas>
					</mx:VBox>
				</mx:Canvas>
			
				<mx:Canvas width="100%">
					<mx:Label x="5" y="0" text="SystemAPI.getEntryString" fontWeight="bold"/>
					<mx:VBox width="100%" x="40" y="20">
						<local:CommentText width="{width-65}" text="Tap the 'Show Text Entry' button to invoke a textField and a keyboard. You can then edit your text. By tapping 'OK' button, you should see the text your entered below the 'Show Text Entry' button. By tapping 'Cancel' button, you cancel your modifications." />
						<mx:Button height="{buttonSize}" label="Show Text Entry" touchTap="SystemAPI.dispatcher.addEventListener('textEntry', onTextEntryComplete); SystemAPI.getEntryString('Text Entry:', false)"/>
						<mx:Label id="txtEntry" text="Text Entry:"/>
					</mx:VBox>
				</mx:Canvas>
			
				<mx:Canvas width="100%" excludeFromPlatform="iPhone OS 3.0">
					<mx:Label x="5" y="0" text="flash.events.KeyboardEvent" fontWeight="bold"/>
					<mx:VBox width="100%" x="40" y="20">
						<local:CommentText width="{width-65}" text="Press a Key and its ID will be displayed in the label below." />
						<mx:Label id="txtKey" text="Press a Key"/>
					</mx:VBox>
				</mx:Canvas>
				<mx:Canvas width="100%" height="5"/>
		</mx:VBox>
	</mob:ScreenView>

	<!-- Image controls Screen -->
	<mob:ScreenView id="Image" viewCreated="initImage()" softKeyBarDescriptor="{backSoftKey}" clipContent="true" verticalScrollPolicy="auto">
		<mob:navBarDescriptor>
			<scr:NavigationBarDescriptor title="Image"/>
		</mob:navBarDescriptor>
	  	<mx:VBox width="100%" height="100%">
			<mx:Canvas width="100%">
				<mx:Label x="5" y="0" text="&lt;mx:Image&gt;" fontWeight="bold"/>
				<mx:VBox width="100%" x="40" y="20">
					<local:CommentText width="{width-65}" text="Tap the 'Start SlideShow' button to start the slide show. You should see a new image (among 3) every 3 seconds. Hit the 'Start SlideShow' button again to change image before the 3 seconds. Hit the 'Stop SlideShow' button to stop the slide show." />
					<mx:Image id="slideShow" width="160" height="120" source="911.gif" showEffect="fadeIn"/>
					<mx:Button width="160" height="{buttonSize}" label="Start SlideShow" touchTap="slideShowIterate(); slideTimer.start();"/>
					<mx:Button width="160" height="{buttonSize}" label="Stop SlideShow" touchTap="slideTimer.stop();"/>						
				</mx:VBox>
			</mx:Canvas>
			
			<mx:Canvas width="100%">
				<mx:Label x="40" y="0" text="AspectRatio:"/>
				<mx:Image x="40" y="20" width="100" height="40" source="meteo.gif" maintainAspectRatio="true"/>
				<mx:Image x="40" y="40" width="100" height="40" source="meteo.gif" maintainAspectRatio="false"/>
			</mx:Canvas>
			
			<mx:Canvas width="100%" horizontalScrollPolicy="off" verticalScrollPolicy="off">
				<mx:Label x="40" y="0" text="Click below image to animate:"/>
				<mx:Image x="40" y="20" width="100" height="60" id="anim" scaleContent="true" touchTap="{animateScaleXUpDown.play([anim])}" source="game.gif"/>
			</mx:Canvas>
			
			<mx:Canvas width="100%">
				<mx:Label x="40" y="0" text="Remote image:"/>
				<mx:VBox width="100%" x="40" y="20">
					<local:CommentText width="{width-65}" text="Tap the 'Download' button to download an image. After a few seconds, you should see the OpenPlug logo below the 'Download' button." />
					<mx:HBox width="100%">
						<mx:Button width="100" height="{buttonSize}" label="Download" touchTap="imgLoader.load(); actImg.start();"/>
						<mob:ActivityIndicator width="25" height="25" id="actImg" autoStart="false"/>
					</mx:HBox>
					<mx:SWFLoader id="imgLoader" autoLoad="false" width="{width-65}" source="http://developer.openplug.com/templates/openplug/images/header/logo-open-plug.jpg"/>
				</mx:VBox>
			</mx:Canvas>
			<mx:Canvas width="100%" height="5"/>
		</mx:VBox>
	</mob:ScreenView>

	<!-- Container controls Screen -->
	<mob:ScreenView id="Container" softKeyBarDescriptor="{backSoftKey}" clipContent="true" verticalScrollPolicy="auto">
		<mob:navBarDescriptor>
			<scr:NavigationBarDescriptor title="Containers"/>
		</mob:navBarDescriptor>
   		<mx:VBox width="100%" height="100%">
			<mx:Canvas width="100%" horizontalScrollPolicy="off" verticalScrollPolicy="off">
				<mx:Label x="5" y="0" text="&lt;mx:Canvas&gt;" fontWeight="bold"/>
				<mx:Label x="40" y="20" text="Scrolling: AUTO"/>
				<mx:Canvas  id="imgCanvas2" x="40" y="40" width="180" height="100" horizontalScrollPolicy="auto" verticalScrollPolicy="auto" clipContent="true">
					<mx:Image width="240" height="320" source="interlaced_transparency.png" maintainAspectRatio="false"/>
				</mx:Canvas>
				<mx:Label x="40" y="140" text="Scrolling:" excludeFromPlatform="iPhone OS 3.0"/>
				<mx:Label x="40" y="160" text="Horizontal ON - Vertical OFF" excludeFromPlatform="iPhone OS 3.0"/>
				<mx:Canvas id="imgCanvas" x="40" y="180" width="180" height="100" horizontalScrollPolicy="on" verticalScrollPolicy="off" clipContent="true" excludeFromPlatform="iPhone OS 3.0">
					<mx:Image width="240" height="320" source="interlaced_transparency.png" maintainAspectRatio="false"/>
				</mx:Canvas>
			</mx:Canvas>
			
			<mx:Canvas width="100%">
				<mx:Label x="5" y="0" text="&lt;mx:Box&gt;" fontWeight="bold"/>
				<mx:VBox width="100%" x="40" y="20">
					<local:CommentText width="{width-65}" text="Tap the 'horizontal' button to make the &lt;mx:Box&gt; horizontal (both buttons on the same row). Hit the 'vertical' button to make the &lt;mx:Box&gt; vertical (one button per row)." />
					<mx:Box id="box" direction="vertical" width="{width-65}" height="{buttonSize*2+5}" paddingLeft="10" paddingRight="10">
		            	<mx:Button height="{buttonSize}" label="horizontal" touchTap="box.direction='horizontal'"/>
		            	<mx:Button height="{buttonSize}" label="vertical" touchTap="box.direction='vertical'"/>
					</mx:Box>
				</mx:VBox>
			</mx:Canvas>
			
			<mx:Canvas width="100%">
				<mx:Label x="5" y="0" text="&lt;mx:HBox&gt;" fontWeight="bold"/>
				<mx:HBox x="40" y="20" width="{width-65}">
		            <mx:Label text="label 1"/>
		            <mx:Label text="label 2"/>
				</mx:HBox>
			</mx:Canvas>
			
			<mx:Canvas width="100%">
				<mx:Label x="5" y="0" text="&lt;mx:VBox&gt;" fontWeight="bold"/>
				<mx:VBox x="40" y="20" width="{width-65}">
		            <mx:Label text="label 1"/>
		            <mx:Label text="label 2"/>
				</mx:VBox>
			</mx:Canvas>
			<mx:Canvas width="100%" height="5"/>
		</mx:VBox>
	</mob:ScreenView>

	<!-- Button controls Screen -->
	<mob:ScreenView id="Button" viewCreated="initButton()" softKeyBarDescriptor="{backSoftKey}" clipContent="true" verticalScrollPolicy="auto">
		<mob:navBarDescriptor>
			<scr:NavigationBarDescriptor title="Buttons and Alerts"/>
		</mob:navBarDescriptor>
   		<mx:VBox width="100%" height="100%">
			<mx:Canvas width="100%">
				<mx:Label x="5" y="0" text="&lt;mx:Button&gt;" fontWeight="bold"/>
				<mx:VBox width="100%" x="40" y="20">
					<local:CommentText width="{width-65}" text="Tap the 'Click me' button to change the button label to 'You win!'." />
					<mx:Button id="btn1" width="{width-65}" height="{buttonSize}" label="Click me" borderColor="white" color="white" cornerRadius="10" fillColors="[ 0x000000, 0xFFFFFF ]" touchTap="btn1.label='You win!'"/>
				</mx:VBox>
			</mx:Canvas>
			
			<!--<mx:VBox width="100%" x="40" includeInPlatform="iPhone OS3.0">
				<mx:Button label="is not yet Retina" width="179" height="44"/>
				<mx:Button label="is Retina" width="179" height="44" styleName="MainButton"/>
			</mx:VBox>-->
			
			<mx:Canvas width="100%">
				<mx:Label x="5" y="0" text="&lt;mob:Alert&gt;" fontWeight="bold"/>
				<mx:VBox width="100%" x="40" y="20">
					<local:CommentText width="{width-65}" text="Tap the 'Show Alert!' button to invoke an alert box with the message 'Hello world!'." />
					<mx:Button x="40" y="60" height="{buttonSize}" label="Show Alert!" touchTap="Alert.show('Hello world!', 'Title')"/>
				</mx:VBox>
			</mx:Canvas>
			
			<mx:Canvas width="100%">
				<mx:Label x="5" y="0" text="&lt;mx:ViewStack&gt;" fontWeight="bold"/>
				<mx:VBox width="100%" x="40" y="20">
					<local:CommentText width="{width-65}" text="Displays one image among the 3 available in &lt;mob:ToggleButtonBar&gt;. The image will appear with a Fade animation effect." />
					<mx:ViewStack id="viewStack" width="{width-65}" height="100" backgroundColor="gray">
						<mx:Canvas width="100%" height="100%" icon="@Embed('clock_toggleBar.gif')" hideEffect="Fade" showEffect="Fade">
							<mx:Image width="100%" height="100%" maintainAspectRatio="true" source="clock.gif"/>
						</mx:Canvas>
						<mx:Canvas horizontalCenter="0" width="100%" height="100%" icon="@Embed('game_toggleBar.gif')" hideEffect="Fade" showEffect="Fade">
							<mx:Image width="100%" height="100%" maintainAspectRatio="true" source="game.gif"/>
						</mx:Canvas>
						<mx:Canvas right="0" width="100%" height="100%" icon="@Embed('meteo_toggleBar.gif')" hideEffect="Fade" showEffect="Fade">
							<mx:Image width="100%" height="100%" maintainAspectRatio="true" source="meteo.gif"/>
						</mx:Canvas>
					</mx:ViewStack>
				</mx:VBox>
			</mx:Canvas>
			
			<mx:Canvas width="100%">
				<mx:Label x="5" y="0" text="&lt;mob:ToggleButtonBar&gt;" fontWeight="bold"/>
				<mx:VBox width="100%" x="40" y="20">
					<local:CommentText width="{width-65}" text="Tap on one of the images to display it in the &lt;mx:ViewStack&gt;." />
					<mob:ToggleButtonBar width="{width-65}" height="45" dataProvider="{viewStack}" backgroundColor="black" buttonStyleName="buttonStyleName" horizontalGap="0"/>
				</mx:VBox>
			</mx:Canvas>
			
			<mx:Canvas width="100%">
				<mx:Label x="5" y="0" text="&lt;mob:NavigationBar&gt;" fontWeight="bold"/>
				<mx:VBox width="100%" x="40" y="20">
					<local:CommentText width="{width-65}" text="Navigation bar example. Hit 'left' or 'right' button to invoke an alert view with the button which was clicked as message. Click 'Ok' button in this first alert view to invoke a second alert view with 'Ok' as message. Click 'Cancel' button in the first alert view to invoke a second alert view with 'Cancel' as message. Click 'Ok' button in this second alert view to remove it." />
					<mob:NavigationBar id="navBar" width="{width-65}" height="{buttonSize+5}"  leftNavigationItem="left" middleNavigationItem="mid" rightNavigationItem="right"/>
				</mx:VBox>
			</mx:Canvas>
			<mx:Canvas width="100%" height="5"/>
		</mx:VBox>
	</mob:ScreenView>

	<!-- List controls Screen -->
	<mob:ScreenView id="List" viewCreated="initLists()" softKeyBarDescriptor="{backSoftKey}" clipContent="true" verticalScrollPolicy="auto">
		<mob:navBarDescriptor>
			<scr:NavigationBarDescriptor id="listsNavBar" title="Lists" rightAction="Modify" rightActionClick="setListMode()"/>
		</mob:navBarDescriptor>
		<mx:VBox width="100%" height="100%">
           	<mob:TabNavigator id="listStack" width="100%" height="100%" change="updateRightButtonLabel(listStack.selectedIndex)">
				<mx:Canvas right="0" width="100%" height="100%" label="mob:List">
					<mx:VBox height="100%" width="100%" >
						<mob:List id="simpleList" width="100%" height="85%" rowHeight="70" dataProvider="{simpleDataProvider}" itemRenderer="ListItemRenderer"
								  change="curListItem.text='Selected item: '+simpleList.selectedIndex.toString();"
								  itemDeleted="list_itemDeletedHandlerSimple(simpleDataProvider, event, curListItem);"
								  itemInserted="list_itemInsertedHandlerSimple(simpleDataProvider, event, curListItem);"
								  itemMoved="list_itemMovedHandlerSimple(simpleDataProvider, event, curListItem);"/>
						<mx:VBox width="100%">
							<mx:Text id="curListItem" text="No selection" width="100%"/>
							<mx:Button id="btnList0" label="Modify" touchTap="setListMode()" excludeFromPlatform="iPhone OS 3.0"/>
						</mx:VBox>
					</mx:VBox>
				</mx:Canvas>
				
				<mx:Canvas right="0" width="100%" height="100%" label="mob:GroupList">
					<mx:VBox height="100%" width="100%" >
						<mob:GroupList width="100%" height="90%" showSelection="false" id="lst2" 
									   change="grpCurrentItem.text='Selected item: '+ lst2.selectedIndex.toString();"
									   dataProvider="{myData}" rowHeight="50"
									   itemRenderer="GroupListItemRenderer"
									   accessoryButtonTap="grpList_accessoryButtonTapped(myData, event, grpCurrentItem);"
									   itemTouchTap="grpList_touchHandler(event);"/>
						<mx:Text width="100%" id="grpCurrentItem" text="No Selection"/>
					</mx:VBox>
				</mx:Canvas>
			</mob:TabNavigator>
		</mx:VBox>
	</mob:ScreenView>
	
	<!-- Video Screen -->
	<mob:ScreenView id="Video" softKeyBarDescriptor="{backSoftKey}" clipContent="true" verticalScrollPolicy="auto">
		<mob:navBarDescriptor>
			<scr:NavigationBarDescriptor title="Photos and Videos"/>
		</mob:navBarDescriptor>
		<mx:VBox width="100%" height="100%">
			<mx:Canvas width="100%" excludeFromPlatform="iPhone OS 3.0,Android 1.6">
				<mx:Label x="5" y="0" text="&lt;mx:VideoDisplay&gt;" fontWeight="bold"/>
				<mx:VideoDisplay autoPlay="false" x="40" y="20" width="{width-65}" height="100" id="videoDisp" source="/sample.3gp" touchTap="videoDisp.play()"/>
				<mx:HBox x="40" y="120" width="{width-65}" height="{buttonSize}">
					<mx:Button width="33%" height="{buttonSize}" label="&gt;" touchTap="videoDisp.play()"/>
					<mx:Button width="33%" height="{buttonSize}" label="||" touchTap="videoDisp.pause()"/>
					<mx:Button width="33%" height="{buttonSize}" label="[]" touchTap="videoDisp.stop()"/>
				</mx:HBox>
			</mx:Canvas>
			
			<mx:Canvas width="100%" excludeFromPlatform="S60 5th Edition">
				<mx:Label x="5" y="0" text="SystemAPI.playVideoFile" fontWeight="bold"/>
				<mx:VBox width="100%" x="40" y="20">
					<local:CommentText width="{width-65}" text="Hit the 'Play Local' button to bring up a movie player to show a video stored in the app itself.{'\n'} Hit the 'Play Remote' button to display a video stored on a server." />
					<mx:Button height="{buttonSize}" label="Play Local" width="{width-65}" touchTap="SystemAPI.playVideoFile('/sample.3gp')"/>
					<mx:Button height="{buttonSize}" label="Play Remote" width="{width-65}" touchTap="SystemAPI.playVideoFile('http://developer.openplug.com/downloads/sample.3gp')"/>
				</mx:VBox>
			</mx:Canvas>
			
			<mx:Canvas width="100%" includeInPlatform="iPhone OS 3.0,Android 1.6">
				<mx:Label x="5" y="0" text="SystemAPI.storeImageFileFromGallery" fontWeight="bold"/>
				<mx:VBox width="100%" x="40" y="20">
