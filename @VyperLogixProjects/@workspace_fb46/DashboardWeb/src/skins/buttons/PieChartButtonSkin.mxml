<?xml version="1.0" encoding="utf-8"?>
<s:SparkButtonSkin 
	minHeight="21"
	minWidth="21"
	xmlns:fx="http://ns.adobe.com/mxml/2009"
	xmlns:s="library://ns.adobe.com/flex/spark"
	xmlns:fb="http://ns.adobe.com/flashbuilder/2009"
	xmlns:images="assets.images.*">

	<!-- host component -->
	<fx:Metadata>
		<![CDATA[ 
        /** 
         * @copy spark.skins.spark.ApplicationSkin#hostComponent
         */
        [HostComponent("spark.components.ToggleButton")]
    ]]>
	</fx:Metadata>

	<!-- states -->
	<s:states>
		<s:State name="up"/>
		<s:State name="over" stateGroups="overStates"/>
		<s:State name="down" stateGroups="downStates"/>
		<s:State name="disabled" stateGroups="disabledStates"/>
		<s:State name="upAndSelected" stateGroups="selectedStates, selectedUpStates"/>
		<s:State name="overAndSelected" stateGroups="overStates, selectedStates"/>
		<s:State name="downAndSelected" stateGroups="downStates, selectedStates"/>
		<s:State name="disabledAndSelected" stateGroups="selectedUpStates, disabledStates, selectedStates"/>
	</s:states>

	<!-- fill -->
	<s:Rect id="fill"
			left="0" right="0" top="0" bottom="0"
			radiusX="2"
			radiusY="2">
		<s:fill>
			<s:LinearGradient rotation="90">
				<s:GradientEntry color="0x121212" color.selectedUpStates="0x3F3F3F" color.overAndSelected="0x3F3F3F"/>
				<s:GradientEntry color="0x121212" color.selectedUpStates="0x353535" color.overAndSelected="0x353535"/>
			</s:LinearGradient>
		</s:fill>
		<s:stroke>
			<s:SolidColorStroke color="0x000000" color.selectedUpStates="0x454545" color.overAndSelected="0x454545" weight="1"/>
		</s:stroke>
	</s:Rect>


	<!-- label -->
	<s:Label id="labelDisplay"
		left="60" right="2" top="2" bottom="2"
		color="0xB3B3B3"
		horizontalCenter="0"
		textAlign="center"
		verticalAlign="middle"
		verticalCenter="1"
		maxDisplayedLines="1">
	</s:Label>

	<!-- icons -->
	<images:pie_chart_icon_off 
		left="5"
		verticalCenter="0"
		scaleX="0.45"
		scaleY="0.45"
		includeIn="up,down"/>
	<images:pie_chart_icon_on 
		left="5"
		verticalCenter="0"
		scaleX="0.45"
		scaleY="0.45"
		includeIn="overStates,selectedStates"/>

</s:SparkButtonSkin>
