<?xml version="1.0" encoding="utf-8"?>
<s:SparkButtonSkin 
	minHeight="21"
	minWidth="21"
	xmlns:fx="http://ns.adobe.com/mxml/2009"
	xmlns:s="library://ns.adobe.com/flex/spark"
	xmlns:fb="http://ns.adobe.com/flashbuilder/2009"
	alpha.disabled="0.5">

	<fx:Metadata>
		<![CDATA[ 
        /** 
         * @copy spark.skins.spark.ApplicationSkin#hostComponent
         */
        [HostComponent("spark.components.Button")]
        ]]>
	</fx:Metadata>

	<!-- states -->
	<s:states>
		<s:State name="up"/>
		<s:State name="over"/>
		<s:State name="down"/>
		<s:State name="disabled"/>
	</s:states>

	<s:Label id="labelDisplay"
		left="10" right="10" top="2" bottom="2"
		color="0x1A1A1A"
		horizontalCenter="0"
		textAlign="center"
		verticalAlign="middle"
		verticalCenter="1"
		maxDisplayedLines="1">
		<s:filters>
			<s:DropShadowFilter 
				color="0xFFFFFF"
				angle="90"
				alpha="0.15"
				distance="1"
				strength="1"
				blurX="1"
				blurY="1"/>
		</s:filters>
	</s:Label>

</s:SparkButtonSkin>
