<?xml version="1.0" encoding="utf-8"?>
<s:SparkSkin 
	minHeight="23"
	minWidth="19"
	xmlns:fx="http://ns.adobe.com/mxml/2009"
	xmlns:s="library://ns.adobe.com/flex/spark"
	xmlns:fb="http://ns.adobe.com/flashbuilder/2009">

	<fx:Metadata>
		<![CDATA[ 
		/** 
		* @copy spark.skins.spark.ApplicationSkin#hostComponent
		*/
		[HostComponent("spark.components.Button")]
		]]>
	</fx:Metadata>


	<fx:Script fb:purpose="styling">
		static private const exclusions:Array = [ "arrow", "border", "fill" ];
	</fx:Script>

	<!-- states -->
	<s:states>
		<s:State name="up"/>
		<s:State name="over"/>
		<s:State name="down"/>
		<s:State name="disabled"/>
	</s:states>

	<!-- fill -->
	<s:Rect id="fill"
		left="1" right="1" top="1" bottom="1">
		<s:fill>
			<s:LinearGradient rotation="90">
				<s:GradientEntry color="0xFFFFFF" alpha="0"/>
				<s:GradientEntry color="0xD8D8D8" alpha="0"/>
			</s:LinearGradient>
		</s:fill>
	</s:Rect>


	<!--- The arrow graphic displayed in the anchor button. -->
	<s:Path id="arrow" right="6" verticalCenter="0" data="M 4.0 4.0 L 4.0 3.0 L 5.0 3.0 L 5.0 2.0 L 6.0 2.0 L 6.0 1.0 L 7.0 1.0 L 7.0 0.0 L 0.0 0.0 L 0.0 1.0 L 1.0 1.0 L 1.0 2.0 L 2.0 2.0 L 2.0 3.0 L 3.0 3.0 L 3.0 4.0 L 4.0 4.0">
		<s:fill>
			<s:SolidColor color="0xBFBFBF"/>
		</s:fill>
	</s:Path>
</s:SparkSkin>
