<?xml version="1.0" encoding="utf-8"?>
<mx:Panel xmlns:fx="http://ns.adobe.com/mxml/2009" 
		  xmlns:s="library://ns.adobe.com/flex/spark" 
		  xmlns:mx="library://ns.adobe.com/flex/mx" 
		  layout="vertical" 
		  backgroundColor="#8a9faa" backgroundAlpha="1.0" borderStyle="inset"
		  title="Confirm" 
		  width="100%" height="100%" 
		  horizontalScrollPolicy="off" verticalScrollPolicy="off"
		  >
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	<fx:Script>
		<![CDATA[
			//import controls.Alert.AlertPopUp;
			
			[Bindable]
			private var iconConfirm:Class = null; //AlertPopUp.iconConfirm;
		]]>
	</fx:Script>
	<mx:VBox width="100%" height="100%" borderStyle="none">
		<mx:HBox width="100%">
			<mx:Image source="{this.iconConfirm}"/>
			<mx:Text id="someText" text="Text" width="100%" height="{this.height-100}"/>
		</mx:HBox>
		<mx:HBox width="100%">
			<mx:Button id="btn_okay" label="Button"/>
			<mx:Spacer width="20%"/>
			<mx:Button id="btn_cancel" label="Button"/>
		</mx:HBox>
	</mx:VBox>
</mx:Panel>
