<?xml version="1.0" encoding="utf-8"?>
<view:FlexpadView xmlns:fx="http://ns.adobe.com/mxml/2009"
    xmlns:s="library://ns.adobe.com/flex/spark"
    xmlns:mx="library://ns.adobe.com/flex/mx"
    xmlns:flexpad="http://code.google.com/p/flexpad/"
    xmlns:view="com.flexpad.view.*"
    xmlns:path="com.flexpad.path.*">
    <view:layout>
        <s:VerticalLayout/>
    </view:layout>

    <s:BorderContainer 
        width="440"
        backgroundColor="0xdfe2e7"
        borderVisible="false">
        <flexpad:Table 
            width="400"
            left="20" top="20" bottom="20">
            <flexpad:TableRow>
                <s:HGroup width="100%">
                    <s:Label 
                        styleName="listItemRendererLabel"
                        text="Label One"/>
                    <s:Spacer width="100%"/>
                    <flexpad:Switch/>
                </s:HGroup>
            </flexpad:TableRow>
            <flexpad:TableRow>
                <s:HGroup width="100%">
                    <s:Label 
                        styleName="listItemRendererLabel"
                        text="Label Two"/>
                    <s:Spacer width="100%"/>
                    <s:HGroup verticalAlign="middle">
                        <flexpad:ListItemRendererHintLabel text="Two"/>
                        <path:ArrowPath>
                            <path:fill>
                                <s:SolidColor color="0x919191"/>
                            </path:fill>
                        </path:ArrowPath>
                    </s:HGroup>
                </s:HGroup>
            </flexpad:TableRow>
            <flexpad:TableRow>
                <s:HGroup width="100%">
                    <s:Label 
                        styleName="listItemRendererLabel"
                        text="Label Three"/>
                    <s:Spacer width="100%"/>
                    <flexpad:ArrowButton/>
                </s:HGroup>
            </flexpad:TableRow>
        </flexpad:Table>
    </s:BorderContainer>

</view:FlexpadView>
