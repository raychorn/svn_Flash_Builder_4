<?xml version="1.0" encoding="utf-8"?>
<s:Group
		xmlns:fx="http://ns.adobe.com/mxml/2009"
		xmlns:s="library://ns.adobe.com/flex/spark">

	<fx:Script>
		<![CDATA[
			[Bindable] public var label:String = 'X';
			[Bindable] public var backgroundColor:uint = 0xff2299;
			[Bindable] public var color:uint = 0xffffff;
			[Bindable] public var fontSize:int = 18;
		]]>
	</fx:Script>

	<s:Rect top="0" bottom="0" left="0" right="0">
		<s:fill>
			<s:SolidColor color="{backgroundColor}" />
		</s:fill>
	</s:Rect>

	<s:Label text="{label}" top="0" bottom="0" left="0" right="0"
			maxDisplayedLines="0"
			color="{color}" fontWeight="bold" fontSize="{fontSize}"
			textAlign="center" verticalAlign="middle" />
</s:Group>