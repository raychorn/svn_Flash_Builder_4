/***************************** Manuel Gonzalez           ** design@stheory.com        ** www.stheory.com           ** www.codingcolor.com       ******************************/package com.video{	import flash.display.*;	import flash.events.MouseEvent;	import flash.events.Event;			public class MuteControlButton extends MovieClip{				private var control:MovieClip;		private var muteState:Boolean;				public function MuteControlButton(){			super();			initControls();		}		public function set isMuted(inBool:Boolean):void		{			muteState = inBool;			setToggle();		}		public function get isMuted():Boolean		{			return muteState;		}		/*		Method: initControls		Parameters:		Returns:		*/		public function initControls():void		{			control = mute_btn;			control.buttonMode = true;			control.addEventListener(MouseEvent.MOUSE_DOWN,toggleMuteButton);		}		/*		Method:setToggle		Parameters:		Returns:		*/		private function setToggle():void		{			if(muteState){								control.gotoAndStop(2);			}else{				control.gotoAndStop(1);			}		}		/*		Method:toggleMuteButton		Parameters:		event:MouseEvent		Returns:		*/		private function toggleMuteButton(event:MouseEvent):void		{			var evtObj:Object;			if(control.currentFrame == 1)			{				control.gotoAndStop(2);				muteState = true;				dispatchEvent(new Event(Event.CHANGE));							}else{								control.gotoAndStop(1);				muteState = false;				dispatchEvent(new Event(Event.CHANGE));			}		}									}}