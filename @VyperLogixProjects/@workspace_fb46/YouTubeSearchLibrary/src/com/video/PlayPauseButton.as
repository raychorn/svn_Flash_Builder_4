/***************************** Manuel Gonzalez           ** design@stheory.com        ** www.stheory.com           ** www.codingcolor.com       ******************************/package com.video{	import flash.display.*;	import flash.events.MouseEvent;	import flash.events.Event;		public class PlayPauseButton extends MovieClip{				private var control:MovieClip;		private var playbackState:String;				public function PlayPauseButton(){			initControls();		}		public function set buttonState(inStr:String):void		{			playbackState = inStr;			updateButtonState();		}		public function get buttonState():String		{			return playbackState;		}		/*		Method: initControls		Parameters:		Returns:		*/		public function initControls():void		{			control = play_pause;			control.buttonMode = true;			control.addEventListener(MouseEvent.MOUSE_DOWN,togglePlayPauseButton);		}		/*		Method: updateButtonState		Parameters:		Returns:		*/		private function updateButtonState():void		{						if(playbackState =="pause"){				control.gotoAndStop(2);			}else if(playbackState =="play"){				control.gotoAndStop(1);			}		}		/*		Method: togglePlayPauseButton		Parameters:		event:MouseEvent		Returns:		*/		private function togglePlayPauseButton(event:MouseEvent):void		{			var evtObj:Object;			if(control.currentFrame == 1)			{				control.gotoAndStop(2);				playbackState = "play";				dispatchEvent(new Event(Event.CHANGE));			}else{				control.gotoAndStop(1);				playbackState ="pause";				dispatchEvent(new Event(Event.CHANGE));			}		}									}}